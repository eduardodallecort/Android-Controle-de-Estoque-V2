<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.edu.unisep.stockcontrol">

    <application
        android:name=".app.StockApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.StockControl">
        <activity android:name=".ui.editstockproduct.EditStockProductActivity"></activity>
        <activity android:name=".ui.EditStockProductActivity" />
        <activity android:name=".ui.liststockproduct.ListStockProductsActivity" />
        <activity android:name=".ui.registerstock.RegisterStockActivity" />
        <activity android:name=".ui.registerstrockproduct.RegisterStockProductActivity" />
        <activity android:name=".ui.liststock.ListStocksActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>